<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="POS_System.Views.Administrator.BreakfastPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:POS_System.ViewModels">
    <ContentPage.BindingContext>
        <local:BreakfastPageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <CollectionView x:Name="BreakfastPageView" ItemsSource="{Binding Products}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <FlexLayout
                            Margin="0"
                            Padding="10,-5"
                            AlignContent="Start"
                            AlignItems="Start"
                            Direction="Row"
                            JustifyContent="Start"
                            Wrap="Wrap">

                            <Frame
                                Margin="0,10,10,20"
                                Padding="0"
                                BackgroundColor="{StaticResource UncheckedColor}"
                                CornerRadius="10"
                                HasShadow="True"
                                HeightRequest="180"
                                WidthRequest="180">

                                <Grid>
                                    <Image
                                        Aspect="AspectFill"
                                        Opacity=".9"
                                        Source="{Binding ImageURL}" />
                                    <Label
                                        Margin="10"
                                        FontAttributes="Bold"
                                        FontSize="15"
                                        Text="{Binding Name}"
                                        TextColor="Black"
                                        VerticalOptions="Start" />
                                    <Frame
                                        Margin="10"
                                        Padding="5"
                                        BackgroundColor="{StaticResource launcher_background}"
                                        CornerRadius="5"
                                        HasShadow="True"
                                        HorizontalOptions="EndAndExpand"
                                        VerticalOptions="End">
                                        <Label
                                            FontAttributes="Bold"
                                            Text="{Binding Price, StringFormat='₱{0:F2}'}"
                                            TextColor="Black" />
                                    </Frame>
                                </Grid>
                            </Frame>
                        </FlexLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>