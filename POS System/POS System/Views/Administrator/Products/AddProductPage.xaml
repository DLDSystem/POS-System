<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="POS_System.Views.Administrator.Products.AddProductPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Image
                Margin="10,30,0,50"
                HeightRequest="100"
                Source="McDonaldsLogoPrimary.png"
                WidthRequest="100" />
            <Label
                Margin="0,-30,0,-20"
                FontSize="30"
                HorizontalOptions="Center"
                Text="Add a product"
                TextColor="Black" />
            <StackLayout>
                <Frame
                    Margin="50,50,50,40"
                    Padding="0"
                    BorderColor="{StaticResource InactiveTextColor}"
                    CornerRadius="10"
                    HasShadow="True"
                    HeightRequest="230">
                    <Image Aspect="AspectFill" Source="" />
                </Frame>
                <Button
                    Margin="50,-30,50,30"
                    BackgroundColor="{StaticResource launcher_background}"
                    BorderColor="{StaticResource Primary}"
                    BorderWidth="2"
                    CornerRadius="10"
                    Text="Upload an image"
                    TextColor="Black"
                    TextTransform="None"
                    VerticalOptions="CenterAndExpand" />

                <Entry
                    x:Name="txtProductName"
                    Margin="50,0,50,0"
                    ClearButtonVisibility="WhileEditing"
                    Placeholder="Product Name"
                    ReturnType="Next" />
                <Entry
                    x:Name="txtPrice"
                    Margin="50,0"
                    ClearButtonVisibility="WhileEditing"
                    Placeholder="Price"
                    ReturnType="Next" />
                <Entry
                    x:Name="txtCategory"
                    Margin="50,0"
                    ClearButtonVisibility="WhileEditing"
                    Placeholder="Category"
                    ReturnType="Next" />
                <Entry
                    x:Name="txtDescription"
                    Margin="50,0"
                    ClearButtonVisibility="WhileEditing"
                    Placeholder="Description"
                    ReturnType="Next" />
                <Entry
                    x:Name="txtImageURL"
                    Margin="50,0"
                    ClearButtonVisibility="WhileEditing"
                    Placeholder="Image URL"
                    ReturnType="Next" />
                <Button
                    x:Name="btnAddProduct"
                    Margin="50,10,50,0"
                    BackgroundColor="{StaticResource Primary}"
                    Clicked="btnAddProduct_Clicked"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    FontSize="15"
                    Text="Add"
                    TextColor="{StaticResource launcher_background}"
                    TextTransform="None"
                    VerticalOptions="CenterAndExpand" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>